{
  "compilerOptions": {
    "strict": true,
    "module": "Node16",
    "target": "es2022",
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "composite": true,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false,
    "resolveJsonModule": true,
    "importHelpers": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "lib": [
      "es2022"
    ]
  }
}
