{
  "$schema": "../../node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "testRunner": "mocha",
  "concurrency": 2,
  "coverageAnalysis": "perTest",
  "mutator": {
    "excludedMutations": ["ArithmeticOperator", "BlockStatement"]
  },
  "reporters": [
    "clear-text",
    "html",
    "json",
    "event-recorder"
  ],
  "plugins": [
    "@stryker-mutator/mocha-runner"
  ],
  "allowConsoleColors": false
}
