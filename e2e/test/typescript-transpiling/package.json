{
  "name": "typescript-transpiling",
  "version": "0.0.0",
  "private": true,
  "description": "A module to perform an integration test",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "clean:reports": "rimraf \"reports\" \"dist\" \"stryker.log\"",
    "clean:dist": "rimraf dist",
    "build": "npm run clean:dist && tsc",
    "verify": "mocha --no-config --no-package --timeout 0 verify/verify.js",
    "test:unit": "npm run build && mocha",
    "test": "npm run clean:reports && stryker run && npm run verify"
  },
  "mocha": {
    "spec": [
      "dist/test/**/*.js"
    ]
  },
  "author": "",
  "license": "ISC"
}
