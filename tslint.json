{
  "defaultSeverity": "error",
  "extends": "tslint:all",
  "rules": {
    "align": false,
    "array-type": false, // remove
    "arrow-parens": [true, "ban-single-arg-parens"],
    "arrow-return-shorthand": [true],
    "await-promise": false,
    "ban-types": false, // [true, ["String"], ["Number"], ["Boolean"]],
    "binary-expression-operand-order": false,
    "comment-format": false,
    "completed-docs": false,
    "curly": false, // remove
    "cyclomatic-complexity": [true, 30],
    "deprecation": false, // remove
    "file-name-casing": false,
    "forin": false,
    "function-constructor": false,
    "increment-decrement": false,
    "interface-name": false,
    "linebreak-style": false,
    "match-default-export-name": false,
    "max-classes-per-file": false,
    "max-line-length": false,
    "member-access": false, // [true, "check-accessor", "check-parameter-property"],
    "member-ordering": false, // remove
    "newline-before-return": false, // remove
    "newline-per-chained-call": false,
    "no-any": false,
    "no-bitwise": false,
    "no-conditional-assignment": false,
    "no-console": false,
    "no-default-export": false,
    "no-default-import": false,
    "no-duplicate-imports": false,
    "no-dynamic-delete": false,
    "no-empty": false, // remove
    "no-empty-interface": false, // remove
    "no-floating-promises": false,
    "no-implicit-dependencies": false,
    "no-import-side-effect": false,
    "no-inferrable-types": false, // remove
    "no-inferred-empty-object-type": false,
    "no-invalid-template-strings": false,
    "no-magic-numbers": false,
    "no-namespace": false,
    "no-non-null-assertion": false, // remove
    "no-null-keyword": false,
    "no-object-literal-type-assertion": false,
    "no-parameter-properties": false,
    "no-parameter-reassignment": false,
    "no-redundant-jsdoc": false, // remove
    "no-require-imports": false,
    "no-shadowed-variable": false,
    "no-submodule-imports": false,
    "no-this-assignment": false,
    "no-unbound-method": false,
    "no-unnecessary-callback-wrapper": false, // remove (there is one exception)
    "no-unnecessary-class": false, // remove
    "no-unnecessary-type-assertion": false, // remove
    "no-unnecessary-qualifier": false, // remove
    "no-unsafe-any": false,
    "no-unused-expression": false,
    "no-use-before-declare": false,
    "no-var-requires": false,
    "no-void-expression": false,
    "number-literal-format": false,
    "object-literal-sort-keys": [true, "ignore-case"],
    "one-line": false, // remove
    "only-arrow-functions": [true, "allow-named-functions"],
    "ordered-imports": false, // remove
    "prefer-conditional-expression": false,
    "prefer-function-over-method": false,
    "prefer-object-spread": false, // remove
    "prefer-template": false, // remove
    "promise-function-async": false,
    "quotemark": [true, "single"],
    "restrict-plus-operands": false,
    "space-within-parens": false, // remove
    "strict-boolean-expressions": false,
    "strict-type-predicates": false,
    "switch-default": false,
    "switch-final-break": false, // remove
    "trailing-comma": false, /* [true, {
      "multiline": "never",
      "singleline": "never"
    }], */
    "type-literal-delimiter": false, // remove
    "typedef": false,
    "typedef-whitespace": false, // remove
    "unnecessary-constructor": false, // remove
    "use-default-type-parameter": false,
    "whitespace": false, // remove
    "variable-name": false
  }
}