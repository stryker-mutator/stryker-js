  "scripts": {
    "postinstall": "lerna bootstrap",
    "prebuild": "npm run clean-integration-test",
    "build": "lerna run build && tsc -p integrationTest",
    "pretest": "npm run build",
    "test": "lerna run test",
    "posttest": "mocha integrationTest/*.js",
