{
  "name": "stryker-parent",
  "private": true,
  "devDependencies": {
    "@types/chai": "~4.1",
    "@types/chai-as-promised": "~7.1",
    "@types/execa": "~2.0",
    "@types/glob": "~7.1",
    "@types/istanbul": "~0.4",
    "@types/karma": "~3.0",
    "@types/lodash": "~4.14",
    "@types/mkdirp": "~0.5",
    "@types/mocha": "~5.2",
    "@types/node": "^10",
    "@types/rimraf": "~2.0",
    "@types/sinon": "5.0.5",
    "@types/sinon-chai": "~3.2",
    "acorn": "~6.0",
    "chai": "~4.2",
    "chai-as-promised": "~7.1",
    "concurrently": "~4.1",
    "cross-env": "~5.2",
    "execa": "~2.0",
    "glob": "~7.1",
    "if-node-version": "~1.1",
    "install-local": "~1.0",
    "jasmine": "~3.4",
    "jasmine-core": "~3.4",
    "lerna": "~3.16",
    "link-parent-bin": "~1.0",
    "mocha": "~6.2",
    "nyc": "~14.1",
    "rimraf": "~3.0",
    "rxjs": "~6.5",
    "sinon": "~7.4",
    "sinon-chai": "~3.3",
    "source-map-support": "~0.5",
    "tslint": "~5.19",
    "tslint-consistent-codestyle": "~1.15",
    "typescript": "~3.5"
  },
  "prettier": {
    "singleQuote": true
  },
  "scripts": {
    "all": "npm run clean && npm run lint && npm run build && npm run test && npm run e2e",
    "postinstall": "lerna bootstrap --no-ci && link-parent-bin",
    "lint-info": "tslint --out tslint.log --project tsconfig.lint.json",
    "lint-fix": "tslint --fix --project tsconfig.lint.json",
    "clean": "rimraf \"packages/api/*+(.d.ts|.js|.map)\" \"packages/*/+(test|src)/**/*+(.d.ts|.js|.map)\" \"packages/*/{.nyc_output,reports,coverage,*.tsbuildinfo}\"",
    "lint": "tslint -p tsconfig.lint.json",
    "build": "tsc -b && lerna run build",
    "test": "npm run mocha",
    "mocha": "lerna run test --stream --concurrency 4",
    "e2e": "cd e2e && npm ci && npm t && cd ..",
    "perf": "cd perf && npm ci && npm t && cd ..",
    "start": "tsc -b -w",
    "lerna-publish": "lerna version --conventional-commits --yes --git-remote gh-publish --force-publish && lerna publish from-git --yes"
  },
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  }
}
