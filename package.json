{
  "name": "stryker-parent",
  "private": true,
  "devDependencies": {
    "@types/chai": "4.2.11",
    "@types/chai-as-promised": "7.1.2",
    "@types/glob": "^7.1.0",
    "@types/istanbul": "^0.4.29",
    "@types/karma": "^5.0.0",
    "@types/lodash": "^4.14.110",
    "@types/mkdirp": "1.0.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.0.1",
    "@types/rimraf": "3.0.0",
    "@types/sinon": "5.0.5",
    "@types/sinon-chai": "3.2.4",
    "@typescript-eslint/eslint-plugin": "3.3.0",
    "@typescript-eslint/parser": "3.3.0",
    "acorn": "^7.0.0",
    "chai": "^4.1.1",
    "chai-as-promised": "^7.1.1",
    "concurrently": "^5.0.0",
    "cross-env": "^7.0.0",
    "eslint": "7.3.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.21.2",
    "eslint-plugin-prettier": "3.1.4",
    "execa": "^3.2.0",
    "glob": "^7.1.1",
    "install-local": "~2.0.0",
    "jasmine": "^3.1.0",
    "jasmine-core": "^3.1.0",
    "json-schema-to-typescript": "~9.1.0",
    "lerna": "^3.10.7",
    "link-parent-bin": "~1.0.0",
    "mocha": "^8.0.1",
    "nyc": "^15.0.0",
    "prettier": "2.0.5",
    "rimraf": "^3.0.0",
    "sinon": "^9.0.0",
    "sinon-chai": "3.5.0",
    "source-map-support": "^0.5.6",
    "typescript": "~3.9.2"
  },
  "scripts": {
    "all": "npm run clean && npm run build && npm run lint && npm run test",
    "postinstall": "lerna bootstrap --no-ci && link-parent-bin",
    "lint": "eslint . --resolve-plugins-relative-to . --ext .ts,.tsx",
    "lint:log": "eslint . --resolve-plugins-relative-to . --ext .ts,.tsx -f compact -o lint.log",
    "lint:fix": "eslint . --resolve-plugins-relative-to . --ext .ts,.tsx --fix",
    "clean": "rimraf \"packages/api/!(stryker.conf)+(.d.ts|.js|.map)\" \"packages/*/+(test|src)/**/*+(.d.ts|.js|.map)\" \"packages/*/{.nyc_output,reports,coverage,src-generated,*.tsbuildinfo,.stryker-tmp,dist}\"",
    "generate": "node tasks/generate-json-schema-to-ts.js && node tasks/generate-mono-schema.js",
    "prebuild": "npm run generate",
    "build": "tsc -b && lerna run build",
    "test": "npm run mocha",
    "mocha": "lerna run test --stream --concurrency 4",
    "e2e": "cd e2e && npm ci && npm t && cd ..",
    "perf": "cd perf && npm ci && npm t && cd ..",
    "start": "tsc -b -w",
    "release": "lerna version"
  },
  "engines": {
    "node": ">=10",
    "npm": ">=5"
  }
}
