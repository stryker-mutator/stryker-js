{
  "name": "stryker-parent",
  "private": true,
  "devDependencies": {
    "@types/babel-core": "^6.25.5",
    "@types/chai": "4.1.7",
    "@types/chai-as-promised": "7.1.0",
    "@types/escodegen": "0.0.6",
    "@types/esprima": "^2.1.31",
    "@types/estree": "0.0.38",
    "@types/execa": "^0.9.0",
    "@types/glob": "^7.1.0",
    "@types/istanbul": "^0.4.29",
    "@types/karma": "^3.0.0",
    "@types/lodash": "^4.14.110",
    "@types/mkdirp": "^0.5.2",
    "@types/mocha": "^2.2.44",
    "@types/node": "^10.11.5",
    "@types/rimraf": "2.0.2",
    "@types/sinon": "5.0.5",
    "@types/sinon-chai": "^3.2.0",
    "acorn": "^6.0.4",
    "browserify": "^16.2.0",
    "chai": "^4.1.1",
    "chai-as-promised": "^7.1.1",
    "concurrently": "^4.0.1",
    "cross-env": "^5.2.0",
    "execa": "^1.0.0",
    "glob": "^7.1.1",
    "if-node-version": "^1.1.1",
    "jasmine": "^3.1.0",
    "jasmine-core": "^3.1.0",
    "lerna": "^2.11.0",
    "link-parent-bin": "^0.2.0",
    "mocha": "^5.2.0",
    "nyc": "^13.0.1",
    "protractor": "^5.1.2",
    "rimraf": "^2.6.1",
    "sinon": "^7.2.0",
    "sinon-chai": "^3.2.0",
    "source-map-support": "^0.5.6",
    "tslint": "~5.12.0",
    "typescript": "3.2.4",
    "web-component-tester": "6.9.2"
  },
  "prettier": {
    "singleQuote": true
  },
  "scripts": {
    "lint-info": "tslint --out tslint.log --project tsconfig.lint.json",
    "lint-fix": "tslint --fix --project tsconfig.lint.json",
    "clean": "rimraf \"packages/stryker-api/*+(.d.ts|.js|.map)\" \"packages/*/+(test|src)/**/*+(.d.ts|.js|.map)\" \"packages/*/{.nyc_output,reports,coverage}\"",
    "postinstall": "lerna bootstrap && link-parent-bin",
    "prebuild": "npm run clean",
    "build": "tsc -b && lerna run build",
    "postbuild": "tslint -p tsconfig.lint.json",
    "pretest": "npm run build",
    "test": "lerna run test --stream",
    "posttest": "cd e2e && npm i && npm t && cd ..",
    "start": "tsc -b -w",
    "lerna-publish": "lerna publish --conventional-commits --yes --git-remote gh-publish"
  },
  "engines": {
    "node": ">=6",
    "npm": ">=5"
  }
}
