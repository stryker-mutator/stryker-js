{
  "name": "stryker-typescript",
  "version": "0.17.0",
  "description": "A plugin for TypeScript-based projects using Stryker",
  "main": "src/index.js",
  "scripts": {
    "bootstrap": "npm link ../stryker-api && npm link ../stryker-mutator-specification",
    "start": "tsc -w",
    "clean": "rimraf \"+(test|src)/**/*+(.d.ts|.js|.map)\" reports",
    "prebuild": "npm run clean",
    "build": "tsc -p .",
    "postbuild": "tslint -p tsconfig.json",
    "test": "nyc --reporter=html --report-dir=reports/coverage --check-coverage --lines 90 --functions 100 --branches 90 npm run mocha",
    "mocha": "mocha \"test/helpers/**/*.js\" \"test/unit/**/*.js\" && mocha --timeout 20000 \"test/helpers/**/*.js\" \"test/integration/**/*.js\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/stryker-mutator/stryker"
  },
  "engines": {
    "node": ">=6"
  },
  "keywords": [
    "stryker",
    "stryker-plugin",
    "typescript",
    "stryker-transpiler",
    "stryker-mutator"
  ],
  "bugs": {
    "url": "https://github.com/stryker-mutator/stryker/issues"
  },
  "author": "Thomas Peters <thomaspeters4@outlook.com>",
  "contributors": [
    "Simon de Lang <simondelang@gmail.com>",
    "Nico Jansen <jansennico@gmail.com>"
  ],
  "homepage": "https://github.com/stryker-mutator/stryker/tree/master/packages/stryker-typescript#readme",
  "license": "Apache-2.0",
  "dependencies": {
    "lodash.flatmap": "~4.5.0",
    "semver": "~5.6.0",
    "tslib": "~1.9.3"
  },
  "devDependencies": {
    "@types/lodash.flatmap": "~4.5.3",
    "@types/semver": "~5.5.0",
    "stryker-api": "^0.23.0",
    "stryker-mutator-specification": "^0.7.0",
    "surrial": "~0.1.3"
  },
  "peerDependencies": {
    "stryker-api": ">=0.18.0 <0.24.0",
    "typescript": "^3.0.3"
  },
  "initStrykerConfig": {
    "tsconfigFile": "tsconfig.json",
    "mutate": [
      "src/**/*.ts"
    ]
  }
}
