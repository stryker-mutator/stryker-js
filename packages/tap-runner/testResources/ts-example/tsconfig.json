{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022"],
    "module": "Node16",
    "moduleResolution": "node16",
    "outDir": "dist",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "transpileOnly": true
  }
}
