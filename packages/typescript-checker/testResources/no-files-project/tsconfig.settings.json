{
  "compilerOptions": {
    "strict": true,
    "target": "es5",
    "moduleResolution": "node",
    "module": "commonjs",
    "composite": true,
    "declaration": true,
    "declarationMap": true,

    // These settings should be overridden by the typescript checker
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "types": []
  },
  "include": ["src"]
}
