{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "rootDir": ".",
        "sourceMap": true,
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": false,
        "types": [ "mocha", "protractor" ]
    },
    "exclude": [
        "node_modules",
        "src/**/*.d.ts",
        "test/**/*.d.ts",
        "typings/**",
        "testResources"
    ]
}