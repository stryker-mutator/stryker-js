  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Unit tests",
      "program": "${workspaceFolder}/../../node_modules/mocha/bin/mocha",
      "args": [
        "test/helpers/**/*.js",
        "test/unit/**/*.js"
      ],
      "outFiles": [
        "${workspaceRoot}/test/**/*.js",
        "${workspaceRoot}/src/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Integration tests",
      "program": "${workspaceFolder}/../../node_modules/mocha/bin/_mocha",
      "args": [
        "test/helpers/**/*.js",
        "test/integration/**/*.js"
      ],
      "outFiles": [
        "${workspaceRoot}/test/**/*.js",
        "${workspaceRoot}/src/**/*.js"
      ]
    }
  ]
}