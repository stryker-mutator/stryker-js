{
  "$schema": "./packages/core/schema/stryker-schema.json",
  "coverageAnalysis": "perTest",
  "testRunner": "mocha",
  "reporters": [
    "progress",
    "html",
    "dashboard"
  ],  
  "plugins": [
    "../mocha-runner",
    "../typescript-checker"
  ],
  "dashboard": {},
  "buildCommand": "tsc -b",
  "mochaOptions": {
    "spec": ["test/unit/**/*.js"]
  },
  "files": [
    "{src,test,src-generated}/**/*.ts",
    "!{src,test,src-generated}/**/*.d.ts",
    "schema/**/*.json",
    "*",
    "typings/**/*.ts"
  ]
}
