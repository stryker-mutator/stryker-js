{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "rootDir": ".",
        "sourceMap": true,
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": false,
        "importHelpers": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "strictNullChecks": true,
        "lib": [
          "es5",
          "es2015.promise"
        ]
    },
    "exclude": [
        "node_modules",
        "src/**/*.d.ts",
        "test/**/*.d.ts",
        "typings/browser",
        "typings/browser.d.ts",
        "testResources"
    ]
}